@model List<ProductDto>


<p>Admin product</p>

<div>
    <a class="btn btn-outline-success" asp-action="Create">Ekle</a>
</div>


<div class="col-12">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>İmages</th>
                <th>Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td><img src="@item.ImageUrl" width="70px"/></td>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-area="Admin"  asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-id="@item.ProductId">Remove</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>